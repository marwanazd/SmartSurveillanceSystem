import cv2
from ultralytics import YOLO

# Load the pre-trained YOLO model
model = YOLO('models/last.pt')  # You can use the yolov5 or yolov8 models here

# Initialize the webcam (0 is the default webcam, change it if you have multiple cameras)
cap = cv2.VideoCapture(0)

# Check if the webcam is opened correctly
if not cap.isOpened():
    print("Error: Could not open webcam.")
    exit()

while True:
    # Capture frame-by-frame
    ret, frame = cap.read()
    if not ret:
        print("Failed to grab frame.")
        break

    # Perform inference with YOLO model
    results = model(frame)

    # Render results on the frame
    frame_with_boxes = results[0].plot()

    # Display the resulting frame
    cv2.imshow('YOLO Object Detection - Webcam Feed', frame_with_boxes)

    # Exit on pressing 'q'
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

# Release the webcam and close OpenCV windows
cap.release()
cv2.destroyAllWindows()
